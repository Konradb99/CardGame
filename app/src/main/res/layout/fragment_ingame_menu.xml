<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_ingame_menu"
    android:orientation="vertical"
    android:background="@null">

    <ImageButton
        android:id="@+id/continue_btn"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@null"
        android:fontFamily="@font/fffforwa"
        android:src="@drawable/cont_btn"
        android:textSize="30sp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/save_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/save_btn"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@null"
        android:fontFamily="@font/fffforwa"
        android:src="@drawable/save_btn"
        android:textSize="30sp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/load_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/continue_btn" />

    <ImageButton
        android:id="@+id/load_btn"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@null"
        android:fontFamily="@font/fffforwa"
        android:src="@drawable/load_btn"
        android:textSize="30sp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@id/exit_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/save_btn" />

    <ImageButton
        android:id="@+id/exit_btn"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/exit_btn"
        android:textSize="30sp"
        android:fontFamily="@font/fffforwa"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/load_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>